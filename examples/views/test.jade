!!! Frameset
html
  head
    link(rel='stylesheet', href='libs/css/mocha.css')
    include includes/head
    script(src='libs/assert.js')
    script(src='libs/mocha.js')
    script
      - mocha.setup('bdd')
    script(src='js/test.js')
    style
      #mocha-stats { top: 60px; }
      #mocha-stats .progress { overflow: visible; }
      body {
        overflow-y:scroll;
      }
      .err, hr, .total {
        float: left;
      }
      hr {
        width: 100%;
        margin: 10px 0;
      }
      .err div {
        float: left;
      }
      .err .line {
        margin-right: 10px;
        width: 70px;
        color: red;
      }
      .err .line:before {
        content: 'Line # '
      }
      .err .message {
        margin-right: 10px;
      }
      .file {
        font-weight: bold;
        float: left;
        font-size: larger;
        margin-bottom: 5px;
      }
      .file span {
        color: red;
        font-weight: normal;
      }
      .total {
        margin: 5px 0 20px 0;
        padding: 5px 0;
        border-top: 1px solid #bababa;
        border-bottom: 1px solid #bababa;
        width: 100%;
      }
      .total .cnt {
        font-weight: bold;
        font-size: larger;
      }
      .totalError{
        font-size: 24px;
        float: left;
        padding: 5px 0;
        border-bottom: 2px solid red;
        border-top: 2px solid red;
        margin-top: 10px;
        margin-bottom: 10px;
        padding: 5px;
        width: 100%;
      }
      .totalPassed{
        display: block;
        font-size: 24px;
        float: left;
        border-bottom: 2px solid green;
        border-top: 2px solid green;
        margin-top: 10px;
        margin-bottom: 10px;
        padding: 5px;
        width: 100%;
      }
  body
    include includes/toppanel
    .container
      .row
        .span3
          .well
            ul#coreLinkList.nav.nav-list
              li.nav-header
                | Tests
              li
                | <a href="#mocha">Mocha test</a>
              li
                | <a href="#coffeelint">Coffeelint test</a>
        .span9
          #mocha
          script
            mocha.run();
      .row
        #coffeelint
        .span3
        .span9
          h3 Lint
          - var cnt_err = 0
          - var files = 0
          - var cnt_warn = 0
          - var passed = 0
          each error, file in errors
            if error.length > 0
                - files += 1
                .error
                  - var err_cnt = 0, warn_cnt = 0
                  each err in error
                    if err.level == 'error'
                      - err_cnt += 1
                    else if err.level == 'warning'
                      - warn_cnt += 1
                  - cnt_warn += warn_cnt
                  - cnt_err +=err_cnt
            else
              - passed += 1

          if passed > 0
            .totalPassed
              .passed= passed
                |  files are passing

          if cnt_err > 0
            .totalError
              span.files= files
              |  files: Total 
              span.errors= cnt_err
              |  errors and 
              span.warns= cnt_warn
              |  warnings

          each error, file in errors
            if error.length > 0
                .file File: 
                  span= file
                .error
                  - var err_cnt = 0, warn_cnt = 0
                  each err in error
                    if err.level == 'error'
                      - err_cnt += 1
                    else if err.level == 'warning'
                      - warn_cnt += 1
                    .err.span9
                      .line= err.lineNumber
                      .message #{err.message}.
                      .context= err.context
                .total 
                  |Total 
                  span.cnt= err_cnt
                  |  errors and 
                  span.cnt= warn_cnt
                  |  warnings
      .row
        .span3
          .span9
            pre= lint
